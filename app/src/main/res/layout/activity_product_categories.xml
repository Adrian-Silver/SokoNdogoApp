<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCategories">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:padding="10sp"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-black"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/vegetable_card">

            <TextView
                android:id="@+id/veg_category"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="Vegetables"
                android:textSize="25sp"
                android:layout_margin="10sp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/vegetables_1"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/fruit_card">

            <TextView
                android:id="@+id/fruits_category"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="Fruits"
                android:textSize="25sp"
                android:layout_margin="10sp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/fruit_1"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/grain_card">

            <TextView
                android:id="@+id/grains_category"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="Grains"
                android:textSize="25sp"
                android:layout_margin="10sp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/grains"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/meat_card">

            <TextView
                android:id="@+id/meat_category"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="Meat"
                android:textSize="25sp"
                android:layout_margin="10sp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/meat_1"
                />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>